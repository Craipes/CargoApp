@inject IHtmlLocalizer<SharedResource> Localizer
@model RegisterViewModel
@{
    ViewData["Title"] = Localizer["Register"];
}

<h3>@Localizer["Register"]</h3>
<form method="post">
    <div class="mb-3">
        <label class="form-label" asp-for=Email></label>
        <input class="form-control" asp-for=Email />
    </div>
    <div class="mb-3">
        <label class="form-label" asp-for=Name></label>
        <input class="form-control" asp-for=Name />
    </div>
    <div class="mb-3">
        <label class="form-label" asp-for=Password></label>
        <input class="form-control" asp-for=Password />
    </div>
    <div class="mb-3">
        <label class="form-label" asp-for=ConfirmPassword></label>
        <input class="form-control" asp-for=ConfirmPassword />
    </div>
    <button class="btn btn-primary" type="submit">@Localizer["Confirm"]</button>
</form>